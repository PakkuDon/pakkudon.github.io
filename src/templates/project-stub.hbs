<div class="project-stub">
  <div class="project-thumbnail" tabindex="0">
    <img style="background-image: url('{{ project.image_set.[0] }}')" alt="{{ project.name }}" />
  </div>
  <div class="details">
    <h3 class="name">{{ project.name }}</h3>
    <p>{{ project.company }}</p>
    <p>
      <time>{{ project.start_date }} - {{ project.end_date }}</time>
    </p>
    <p>{{ project.description }}</p>
    <ul>
      {{#each project.notes}}
      <li>{{ this }}</li>
      {{/each}}
    </ul>
    {{> ./tag-list tags=project.tags }}
  </div>
  <footer class="links">
    {{#each project.links}}
    <a class="tag" title="{{ title }}" target="_blank" href="{{ url }}" rel="noopener noreferrer">
      <i class="fa fa-external-link" aria-hidden="true"></i> {{ title }}
    </a>
    {{/each}}
  </footer>
</div>
